<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_add_post_text"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cheersapps.aftha7beta.AddPostTextActivity"
    android:gravity="center|top">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_return"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:inputType="textMultiLine"
        android:ems="1"
        android:hint="Your post here..."
        android:id="@+id/add_post_input_text"
        android:layout_gravity="top"
        android:gravity="top"
        android:layout_marginTop="100dp"
        style="@style/FullWidthEditText"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add"
        android:id="@+id/btn_add_post_for_input_text"
        android:layout_gravity="right|center_vertical"

        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:backgroundTint="@color/colorPrimaryDark"
        android:layout_below="@+id/add_post_input_text"/>

</RelativeLayout>
