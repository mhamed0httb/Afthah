<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/bg"
    tools:context="com.cheersapps.aftha7.RegisterActivity">


    <EditText
        android:id="@+id/et_register"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:hint="          Username"
        android:fontFamily="Roboto"
        android:drawablePadding="10dp"
        android:textSize="16sp"
        android:textColor="@color/colorWhite"
        android:textColorHint="@color/colorWhite"

        android:drawableLeft="@mipmap/mm"

        android:layout_marginTop="220dp"
        android:layout_centerHorizontal="true" />


    <EditText
        android:id="@+id/et_mail"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:hint="          Mail"
        android:fontFamily="Roboto"
        android:inputType="textEmailAddress"
        android:drawablePadding="10dp"
        android:textColor="@color/colorWhite"
        android:textColorHint="@color/colorWhite"
        android:textSize="16sp"


        android:drawableLeft="@android:drawable/ic_dialog_map"

        android:layout_below="@+id/et_register"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="38dp" />


    <ImageButton
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@android:drawable/ic_dialog_map"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="132dp"
        android:id="@+id/pic"


        />

    <EditText
        android:id="@+id/et_password"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:hint="          Password"
        android:textColor="@color/colorWhite"
        android:textColorHint="@color/colorWhite"

        android:textSize="16sp"
        android:drawablePadding="10dp"

        android:drawableLeft="@mipmap/locked"
        android:fontFamily="Roboto"
        android:inputType="textPassword"


        android:layout_marginTop="40dp"
        android:layout_below="@+id/et_mail"
        android:layout_alignLeft="@+id/et_mail"
        android:layout_alignStart="@+id/et_mail" />

    <Button
        android:id="@+id/btn_register"
        android:layout_width="250dp"
        android:layout_marginTop="20dp"
        android:layout_height="35dp"
        android:background="@drawable/roundbutton"
        android:textColor="#fff"

        android:text="Sign Up"
        android:layout_below="@+id/et_password"
        android:layout_alignLeft="@+id/et_password"
        android:layout_alignStart="@+id/et_password" />


</RelativeLayout>
